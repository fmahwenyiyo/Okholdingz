<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background"
    >

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tsubject"
        android:minHeight="50dp"

        android:hint="Enter Subject here"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#8bc93f3f" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbody"

        android:hint="Enter body here"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tsubject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minLines="6"
        android:background="#7fef3939" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/btnSubmit"
        android:background="#c8241b"
        android:textColor="#ffffffff"
        android:textStyle="normal|bold|italic"
        android:onClick="OnSend"
        android:layout_below="@+id/tbody"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="OnBack"
        android:id="@+id/btnLogin"
        android:background="#e51b14"
        android:textColor="#ffffffff"
        android:textStyle="normal|bold|italic"
        android:layout_alignTop="@+id/btnSubmit"
        android:layout_alignRight="@+id/tbody"
        android:layout_alignEnd="@+id/tbody"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

</RelativeLayout>
